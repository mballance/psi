<?xml version="1.0" encoding="UTF-8"?>
<pss:model 
  xmlns:pss="http://accellera.org/PSS"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://accellera.org/PSS PSSModel.xsd">
    <pss:package name="methods_pkg">
        <pss:import_function name="my_func">
            <pss:parameters>
                <pss:parameter name="a" dir="output">
                    <pss:type>
                        <pss:bit>
                            <pss:msb>
                                <pss:number>0x7</pss:number>
                            </pss:msb>
                            <pss:lsb>
                                <pss:number>0x0</pss:number>
                            </pss:lsb>
                        </pss:bit>
                    </pss:type>
                </pss:parameter>
                <pss:parameter name="b" dir="output">
                    <pss:type>
                        <pss:bit>
                            <pss:msb>
                                <pss:number>0x1f</pss:number>
                            </pss:msb>
                            <pss:lsb>
                                <pss:number>0x0</pss:number>
                            </pss:lsb>
                        </pss:bit>
                    </pss:type>
                </pss:parameter>
            </pss:parameters>
        </pss:import_function>
        <pss:import_function name="my_func2">
            <pss:parameters>
                <pss:parameter name="a" dir="output">
                    <pss:type>
                        <pss:bit>
                            <pss:msb>
                                <pss:number>0x7</pss:number>
                            </pss:msb>
                            <pss:lsb>
                                <pss:number>0x0</pss:number>
                            </pss:lsb>
                        </pss:bit>
                    </pss:type>
                </pss:parameter>
                <pss:parameter name="b" dir="output">
                    <pss:type>
                        <pss:bit>
                            <pss:msb>
                                <pss:number>0x1f</pss:number>
                            </pss:msb>
                            <pss:lsb>
                                <pss:number>0x0</pss:number>
                            </pss:lsb>
                        </pss:bit>
                    </pss:type>
                </pss:parameter>
            </pss:parameters>
        </pss:import_function>
    </pss:package>
    <pss:component name="top">
        <pss:action name="entry_point">
            <pss:field name="p1" qualifier="rand">
                <pss:type>
                    <pss:bit>
                        <pss:msb>
                            <pss:number>0x7</pss:number>
                        </pss:msb>
                        <pss:lsb>
                            <pss:number>0x0</pss:number>
                        </pss:lsb>
                    </pss:bit>
                </pss:type>
            </pss:field>
            <pss:field name="p2" qualifier="rand">
                <pss:type>
                    <pss:bit>
                        <pss:msb>
                            <pss:number>0x7</pss:number>
                        </pss:msb>
                        <pss:lsb>
                            <pss:number>0x0</pss:number>
                        </pss:lsb>
                    </pss:bit>
                </pss:type>
            </pss:field>
            <pss:field name="p3" qualifier="rand">
                <pss:type>
                    <pss:bit>
                        <pss:msb>
                            <pss:number>0x7</pss:number>
                        </pss:msb>
                        <pss:lsb>
                            <pss:number>0x0</pss:number>
                        </pss:lsb>
                    </pss:bit>
                </pss:type>
            </pss:field>
            <pss:exec>
                <pss:block kind="post_solve">
                    <pss:call>
                        <pss:function>
                            <pss:path>methods_pkg</pss:path>
                            <pss:path>my_func</pss:path>
                        </pss:function>
                        <pss:parameters>
                            <pss:parameter>
                                <pss:ref>
                                    <pss:path>p1</pss:path>
                                </pss:ref>
                            </pss:parameter>
                            <pss:parameter>
                                <pss:ref>
                                    <pss:path>p2</pss:path>
                                </pss:ref>
                            </pss:parameter>
                        </pss:parameters>
                    </pss:call>
                    <pss:call>
                        <pss:function>
                            <pss:path>methods_pkg</pss:path>
                            <pss:path>my_func</pss:path>
                        </pss:function>
                        <pss:parameters>
                            <pss:parameter>
                                <pss:binexp op="Plus">
                                    <pss:lhs>
                                        <pss:ref>
                                            <pss:path>p1</pss:path>
                                        </pss:ref>
                                    </pss:lhs>
                                    <pss:rhs>
                                        <pss:number>0x1</pss:number>
                                    </pss:rhs>
                                </pss:binexp>
                            </pss:parameter>
                            <pss:parameter>
                                <pss:binexp op="Plus">
                                    <pss:lhs>
                                        <pss:ref>
                                            <pss:path>p2</pss:path>
                                        </pss:ref>
                                    </pss:lhs>
                                    <pss:rhs>
                                        <pss:number>0x4</pss:number>
                                    </pss:rhs>
                                </pss:binexp>
                            </pss:parameter>
                        </pss:parameters>
                    </pss:call>
                </pss:block>
            </pss:exec>
        </pss:action>
    </pss:component>
</pss:model>
