<?xml version="1.0" encoding="UTF-8"?>
<pss:model 
  xmlns:pss="http://accellera.org/PSS"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://accellera.org/PSS PSSModel.xsd">
    <pss:component name="top_comp">
        <pss:action name="at">
            <pss:field name="field" qualifier="rand">
                <pss:type>
                    <pss:bit>
                        <pss:msb>
                            <pss:number>0x3</pss:number>
                        </pss:msb>
                        <pss:lsb>
                            <pss:number>0x0</pss:number>
                        </pss:lsb>
                    </pss:bit>
                </pss:type>
            </pss:field>
        </pss:action>
        <pss:action name="top_action">
            <pss:field name="a">
                <pss:type>
                    <pss:user>
                        <pss:path>top_comp</pss:path>
                        <pss:path>at</pss:path>
                    </pss:user>
                </pss:type>
            </pss:field>
            <pss:field name="b">
                <pss:type>
                    <pss:user>
                        <pss:path>top_comp</pss:path>
                        <pss:path>at</pss:path>
                    </pss:user>
                </pss:type>
            </pss:field>
            <pss:field name="c">
                <pss:type>
                    <pss:user>
                        <pss:path>top_comp</pss:path>
                        <pss:path>at</pss:path>
                    </pss:user>
                </pss:type>
            </pss:field>
            <pss:graph>
                <pss:traverse name="a"/>
                <pss:traverse name="b"/>
                <pss:parallel>
                    <pss:production>
                        <pss:traverse name="a"/>
                    </pss:production>
                    <pss:production>
                        <pss:repeat type="count">
                            <pss:expr>
                                <pss:number>0x5</pss:number>
                            </pss:expr>
                            <pss:body>
                                <pss:traverse name="c"/>
                            </pss:body>
                        </pss:repeat>
                    </pss:production>
                    <pss:production>
                        <pss:traverse name="a"/>
                    </pss:production>
                </pss:parallel>
            </pss:graph>
        </pss:action>
    </pss:component>
</pss:model>
