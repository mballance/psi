<?xml version="1.0" encoding="UTF-8"?>
<pss:model 
  xmlns:pss="http://accellera.org/PSS"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://accellera.org/PSS PSSModel.xsd">
    <pss:package>
        <pss:struct name="power_state_s" qualifier="state">
            <pss:field name="initial" qualifier="rand">
                <pss:type>
                    <pss:bool/>
                </pss:type>
            </pss:field>
            <pss:field name="dmn_A" qualifier="rand">
                <pss:type>
                    <pss:bit>
                        <pss:msb>
                            <pss:number>1</pss:number>
                        </pss:msb>
                        <pss:lsb>
                            <pss:number>0</pss:number>
                        </pss:lsb>
                    </pss:bit>
                </pss:type>
            </pss:field>
            <pss:field name="dmn_B" qualifier="rand">
                <pss:type>
                    <pss:bit>
                        <pss:msb>
                            <pss:number>1</pss:number>
                        </pss:msb>
                        <pss:lsb>
                            <pss:number>0</pss:number>
                        </pss:lsb>
                    </pss:bit>
                </pss:type>
            </pss:field>
            <pss:field name="dmn_C" qualifier="rand">
                <pss:type>
                    <pss:bit>
                        <pss:msb>
                            <pss:number>1</pss:number>
                        </pss:msb>
                        <pss:lsb>
                            <pss:number>0</pss:number>
                        </pss:lsb>
                    </pss:bit>
                </pss:type>
            </pss:field>
            <pss:constraint>
                <pss:if>
                    <pss:cond>
                        <pss:binexp op="NotEq">
                            <pss:lhs>
                                <pss:ref>
                                    <pss:path>dmn_C</pss:path>
                                </pss:ref>
                            </pss:lhs>
                            <pss:rhs>
                                <pss:number>0x0</pss:number>
                            </pss:rhs>
                        </pss:binexp>
                    </pss:cond>
                    <pss:true>
                        <pss:stmt>
                            <pss:binexp op="EqEq">
                                <pss:lhs>
                                    <pss:ref>
                                        <pss:path>dmn_B</pss:path>
                                    </pss:ref>
                                </pss:lhs>
                                <pss:rhs>
                                    <pss:number>0x0</pss:number>
                                </pss:rhs>
                            </pss:binexp>
                        </pss:stmt>
                    </pss:true>
                </pss:if>
                <pss:if>
                    <pss:cond>
                        <pss:binexp op="EqEq">
                            <pss:lhs>
                                <pss:ref>
                                    <pss:path>initial</pss:path>
                                </pss:ref>
                            </pss:lhs>
                            <pss:rhs>
                                <pss:number>0x1</pss:number>
                            </pss:rhs>
                        </pss:binexp>
                    </pss:cond>
                    <pss:true>
                        <pss:stmt>
                            <pss:binexp op="EqEq">
                                <pss:lhs>
                                    <pss:ref>
                                        <pss:path>dmn_A</pss:path>
                                    </pss:ref>
                                </pss:lhs>
                                <pss:rhs>
                                    <pss:number>0x0</pss:number>
                                </pss:rhs>
                            </pss:binexp>
                        </pss:stmt>
                        <pss:stmt>
                            <pss:binexp op="EqEq">
                                <pss:lhs>
                                    <pss:ref>
                                        <pss:path>dmn_B</pss:path>
                                    </pss:ref>
                                </pss:lhs>
                                <pss:rhs>
                                    <pss:number>0x0</pss:number>
                                </pss:rhs>
                            </pss:binexp>
                        </pss:stmt>
                        <pss:stmt>
                            <pss:binexp op="EqEq">
                                <pss:lhs>
                                    <pss:ref>
                                        <pss:path>dmn_C</pss:path>
                                    </pss:ref>
                                </pss:lhs>
                                <pss:rhs>
                                    <pss:number>0x0</pss:number>
                                </pss:rhs>
                            </pss:binexp>
                        </pss:stmt>
                    </pss:true>
                </pss:if>
            </pss:constraint>
        </pss:struct>
    </pss:package>
    <pss:component name="my_system_c">
        <pss:action name="power_transition">
            <pss:field name="step" qualifier="rand">
                <pss:type>
                    <pss:int>
                        <pss:msb>
                            <pss:number>31</pss:number>
                        </pss:msb>
                        <pss:lsb>
                            <pss:number>0</pss:number>
                        </pss:lsb>
                    </pss:int>
                </pss:type>
            </pss:field>
            <pss:field name="prev" qualifier="input">
                <pss:type>
                    <pss:user>
                        <pss:path>power_state_s</pss:path>
                    </pss:user>
                </pss:type>
            </pss:field>
            <pss:field name="next" qualifier="output">
                <pss:type>
                    <pss:user>
                        <pss:path>power_state_s</pss:path>
                    </pss:user>
                </pss:type>
            </pss:field>
            <pss:constraint name="step_c">
                <pss:stmt>
                    <pss:binexp op="OrOr">
                        <pss:lhs>
                            <pss:binexp op="EqEq">
                                <pss:lhs>
                                    <pss:ref>
                                        <pss:path>step</pss:path>
                                    </pss:ref>
                                </pss:lhs>
                                <pss:rhs>
                                    <pss:number>0xffffffffffffffff</pss:number>
                                </pss:rhs>
                            </pss:binexp>
                        </pss:lhs>
                        <pss:rhs>
                            <pss:binexp op="EqEq">
                                <pss:lhs>
                                    <pss:ref>
                                        <pss:path>step</pss:path>
                                    </pss:ref>
                                </pss:lhs>
                                <pss:rhs>
                                    <pss:number>0x1</pss:number>
                                </pss:rhs>
                            </pss:binexp>
                        </pss:rhs>
                    </pss:binexp>
                </pss:stmt>
            </pss:constraint>
            <pss:constraint name="A_c">
                <pss:stmt>
                    <pss:binexp op="EqEq">
                        <pss:lhs>
                            <pss:ref>
                                <pss:path>next</pss:path>
                                <pss:path>dmn_A</pss:path>
                            </pss:ref>
                        </pss:lhs>
                        <pss:rhs>
                            <pss:ref>
                                <pss:path>prev</pss:path>
                                <pss:path>dmn_A</pss:path>
                            </pss:ref>
                        </pss:rhs>
                    </pss:binexp>
                </pss:stmt>
            </pss:constraint>
            <pss:constraint name="B_c">
                <pss:stmt>
                    <pss:binexp op="EqEq">
                        <pss:lhs>
                            <pss:ref>
                                <pss:path>next</pss:path>
                                <pss:path>dmn_B</pss:path>
                            </pss:ref>
                        </pss:lhs>
                        <pss:rhs>
                            <pss:ref>
                                <pss:path>prev</pss:path>
                                <pss:path>dmn_B</pss:path>
                            </pss:ref>
                        </pss:rhs>
                    </pss:binexp>
                </pss:stmt>
            </pss:constraint>
            <pss:constraint name="C_c">
                <pss:stmt>
                    <pss:binexp op="EqEq">
                        <pss:lhs>
                            <pss:ref>
                                <pss:path>next</pss:path>
                                <pss:path>dmn_C</pss:path>
                            </pss:ref>
                        </pss:lhs>
                        <pss:rhs>
                            <pss:ref>
                                <pss:path>prev</pss:path>
                                <pss:path>dmn_C</pss:path>
                            </pss:ref>
                        </pss:rhs>
                    </pss:binexp>
                </pss:stmt>
            </pss:constraint>
        </pss:action>
        <pss:action name="A_transition">
            <pss:super>
                <pss:path>my_system_c</pss:path>
                <pss:path>power_transition</pss:path>
            </pss:super>
            <pss:constraint name="A_c">
                <pss:stmt>
                    <pss:binexp op="EqEq">
                        <pss:lhs>
                            <pss:ref>
                                <pss:path>next</pss:path>
                                <pss:path>dmn_A</pss:path>
                            </pss:ref>
                        </pss:lhs>
                        <pss:rhs>
                            <pss:binexp op="Plus">
                                <pss:lhs>
                                    <pss:ref>
                                        <pss:path>prev</pss:path>
                                        <pss:path>dmn_A</pss:path>
                                    </pss:ref>
                                </pss:lhs>
                                <pss:rhs>
                                    <pss:ref>
                                        <pss:path>step</pss:path>
                                    </pss:ref>
                                </pss:rhs>
                            </pss:binexp>
                        </pss:rhs>
                    </pss:binexp>
                </pss:stmt>
            </pss:constraint>
        </pss:action>
        <pss:action name="B_transition">
            <pss:super>
                <pss:path>my_system_c</pss:path>
                <pss:path>power_transition</pss:path>
            </pss:super>
            <pss:constraint name="B_c">
                <pss:stmt>
                    <pss:binexp op="EqEq">
                        <pss:lhs>
                            <pss:ref>
                                <pss:path>next</pss:path>
                                <pss:path>dmn_B</pss:path>
                            </pss:ref>
                        </pss:lhs>
                        <pss:rhs>
                            <pss:binexp op="Plus">
                                <pss:lhs>
                                    <pss:ref>
                                        <pss:path>prev</pss:path>
                                        <pss:path>dmn_B</pss:path>
                                    </pss:ref>
                                </pss:lhs>
                                <pss:rhs>
                                    <pss:ref>
                                        <pss:path>step</pss:path>
                                    </pss:ref>
                                </pss:rhs>
                            </pss:binexp>
                        </pss:rhs>
                    </pss:binexp>
                </pss:stmt>
            </pss:constraint>
        </pss:action>
        <pss:action name="C_transition">
            <pss:super>
                <pss:path>my_system_c</pss:path>
                <pss:path>power_transition</pss:path>
            </pss:super>
            <pss:constraint name="C_c">
                <pss:stmt>
                    <pss:binexp op="EqEq">
                        <pss:lhs>
                            <pss:ref>
                                <pss:path>next</pss:path>
                                <pss:path>dmn_C</pss:path>
                            </pss:ref>
                        </pss:lhs>
                        <pss:rhs>
                            <pss:binexp op="Plus">
                                <pss:lhs>
                                    <pss:ref>
                                        <pss:path>prev</pss:path>
                                        <pss:path>dmn_C</pss:path>
                                    </pss:ref>
                                </pss:lhs>
                                <pss:rhs>
                                    <pss:ref>
                                        <pss:path>step</pss:path>
                                    </pss:ref>
                                </pss:rhs>
                            </pss:binexp>
                        </pss:rhs>
                    </pss:binexp>
                </pss:stmt>
            </pss:constraint>
        </pss:action>
    </pss:component>
</pss:model>
